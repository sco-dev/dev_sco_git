<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns:t="sap.ui.table"
                         xmlns="sap.m">
    <Dialog class="sapUiSizeCompact" contentWidth="40rem" title="Seleccionar Responsable">
        <t:Table rows="{Responsables}" selectedIndex="{i_Responsable}" selectionMode="Single" selectionBehavior="RowOnly" visibleRowCount="5" noData=""  rowSelectionChange="handleResponsablesSelectChange">
            <t:columns>
                <t:Column filterProperty="RUT" width="6rem">
                    <Label text="Rut"/>
                    <t:template>
                        <Text text="{RUT}"/>
                    </t:template>
                </t:Column>
                <t:Column filterProperty="NOMBRE">
                    <Label text="Nombre" />
                    <t:template>
                        <Text text="{NOMBRE}"/>
                    </t:template>
                </t:Column>
            </t:columns>
            <t:footer>
                <Toolbar>
                    <Text text="Total: {= ${Responsables}.length }"/>
                </Toolbar>
            </t:footer>
        </t:Table>
        <beginButton>
            <Button text="Seleccionar" icon="sap-icon://accept" type="Emphasized"  enabled="{=${i_Responsable}>=0}" press="handleSetResponsable"/>
        </beginButton>
        <endButton>
            <Button text="Cerrar" icon="sap-icon://decline" press="closeDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>