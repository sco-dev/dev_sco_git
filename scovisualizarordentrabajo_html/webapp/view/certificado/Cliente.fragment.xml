<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns:t="sap.ui.table"
                         xmlns="sap.m">
    <Dialog class="sapUiSizeCompact" contentWidth="40rem" title="Seleccionar Cliente">
        <t:Table rows="{Clientes}" selectedIndex="{i_Cliente}" selectionMode="Single" selectionBehavior="RowOnly" visibleRowCount="5" noData="" rowSelectionChange="handleClienteSelectChange">
            <t:extension>
                <Toolbar>
                    <Label text="Rut"/>
                    <Input value="{filters/Rut}" width="10rem" submit="handleSearchCliente"/>
                    <Label text="Nombre"/>
                    <Input value="{filters/Nombre}" width="10rem" submit="handleSearchCliente"/>
                    <Button icon="sap-icon://search" text="Buscar" press="handleSearchCliente"/>
                </Toolbar>
            </t:extension>
            <t:columns>
                <t:Column filterProperty="RUT" width="7rem">
                    <Label text="Rut"/>
                    <t:template>
                        <Text text="{RUT}"/>
                    </t:template>
                </t:Column>
                <t:Column filterProperty="NOMBRE">
                    <Label text="Nombre" />
                    <t:template>
                        <Text text="{NOMBRE}"/>
                    </t:template>
                </t:Column>
            </t:columns>
            <t:footer>
                <Toolbar>
                    <Text text="Total: {= ${Clientes}.length }"/>
                </Toolbar>
            </t:footer>
        </t:Table>

        
        <!-- beginButton>
            <Button text="Seleccionar" icon="sap-icon://accept" type="Emphasized"  enabled="{=${i_Cliente}>=0}" press="handleSetCliente"/>
        </beginButton>

        -->
        <endButton>
            <Button text="Cerrar" icon="sap-icon://decline" press="closeDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>