<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns:t="sap.ui.table"
                         xmlns="sap.m">
    <Dialog class="sapUiSizeCompact" contentWidth="40rem" title="Seleccionar Asesor">
        <t:Table rows="{Asesores}" selectedIndex="{i_Asesor}" selectionMode="Single" selectionBehavior="RowOnly" visibleRowCount="5" noData="" rowSelectionChange="handleAsesorSelectChange">
            <t:columns>
                <t:Column filterProperty="RUT" width="7rem">
                    <Label text="Rut"/>
                    <t:template>
                        <Text text="{RUT}"/>
                    </t:template>
                </t:Column>
                <t:Column filterProperty="NOMBRE">
                    <Label text="Nombre" />
                    <t:template>
                        <Text text="{NOMBRE}"/>
                    </t:template>
                </t:Column>
            </t:columns>
            <t:footer>
                <Toolbar>
                    <Text text="Total: {= ${Asesores}.length }"/>
                </Toolbar>
            </t:footer>
        </t:Table>

        <!--beginButton>
            <Button text="Seleccionar" icon="sap-icon://accept" type="Emphasized"  enabled="{=${i_Asesor}>=0}" press="handleSetAsesor"/>
        </beginButton>        
        -->

        <endButton>
            <Button text="Cerrar" icon="sap-icon://decline" press="closeDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>