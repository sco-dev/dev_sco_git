<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:t="sap.ui.table" xmlns="sap.m">
    <core:Fragment fragmentName="sapui5agendar.scovisualizarordentrabajo_html.view.operaciones.Table" type="XML"/>

    <Panel headerText="Asignación de Mecánico" visible="{=${/Operaciones/i_Operacion} >= 0 &amp;&amp; ${/Operaciones/VisibleMecanicos}}">
        <t:Table rows="{Mecanicos}" selectedIndex="{i_Mecanico}" selectionMode="Single" selectionBehavior="RowOnly" visibleRowCount="5" noData="" id="tableNecesidades">
            <t:extension>
                <Toolbar>
                    <Button text="Agregar Registro" icon="sap-icon://add" press="handleNecesidadesAdd"/>
                    <Button text="Modificar Registro" icon="sap-icon://edit" press="handleNecesidadesEdit" enabled="{=${i_Mecanico} >= 0}"/>
                    <Button text="Eliminar Registro" icon="sap-icon://delete" press="handleNecesidadesDelete" enabled="{=${i_Mecanico} >= 0}"/>
                </Toolbar>
            </t:extension>
            <t:columns>
                <t:Column autoResizable="true">
                    <Label text="Persona"/>
                    <t:template>
                        <Text text="{PERSONA}"/>
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <Label text="Nº Personal"/>
                    <t:template>
                        <Text text="{NRO_PERSONAL}"/>
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <Label text="Trabajo"/>
                    <t:template>
                        <Text text="{TRABAJO}"/>
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <Label text="Un. Trab."/>
                    <t:template>
                        <Text text="{UNIDAD_TRABAJO}"/>
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <Label text="Dur. Normal"/>
                    <t:template>
                        <Text text="{DURACION}"/>
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <Label text="Unidad"/>
                    <t:template>
                        <Text text="{UNIDAD}"/>
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <Label text="Fecha Inicio"/>
                    <t:template>
                        <Text text="{path:'FECHA_INICIO',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/yyyy', source:{pattern:'yyyy-MM-dd'}}}"/>
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <Label text="Hora Inicio"/>
                    <t:template>
                        <Text text="{HORA_INICIO}"/>
                    </t:template>
                </t:Column>
                <t:Column autoResizable="true">
                    <Label text="Fecha Fin"/>
                    <t:template>
                        <Text text="{path:'FECHA_FIN',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/yyyy', source:{pattern:'yyyy-MM-dd'}}}"/>
                    </t:template>
                </t:Column>
                <t:Column autoResizable="false">
                    <Label text="Hora Fin"/>
                    <t:template>
                        <Text text="{HORA_FIN}"/>
                    </t:template>
                </t:Column>
            </t:columns>
            <t:footer>
                <Toolbar>
                    <Text text="Total: {= ${Mecanicos}.length }"/>
                </Toolbar>
            </t:footer>
        </t:Table>
    </Panel>
</core:FragmentDefinition>