<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
                         xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" xmlns:u="sap.ui.unified"
                         xmlns:t="sap.ui.table" xmlns:c="sap.suite.ui.commons"
                         xmlns:custom="sapui5agendar.sco00agendar3.customelements">
    <Dialog class="sapUiSizeCompact" contentWidth="50rem" title="Datos de la Reserva para la Mantención del Vehículo">

        <f:Form editable="true" binding="{/ConfirmarReserva}">
            <f:layout>
                <f:ResponsiveGridLayout
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="0"
                        emptySpanM="0"
                        columnsXL="2"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false"/>
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Nombre Cliente">
                            <f:fields>
                                <Text text="{NombreCliente}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Marca">
                            <f:fields>
                                <Text text="{Marca}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Patente">
                            <f:fields>
                                <Text text="{Patente}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Box">
                            <f:fields>
                                <Text text="{Box}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Hora">
                            <f:fields>
                                <Text text="{Hora}"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Rut Cliente">
                            <f:fields>
                                <Text text="{RutCliente}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Modelo">
                            <f:fields>
                                <Text text="{Modelo}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Taller">
                            <f:fields>
                                <Text text="{Taller}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Fecha">
                            <f:fields>
                                <Text text="{
                                            path:'Fecha',
                                            type:'sap.ui.model.type.Date',
                                            formatOptions:{pattern:'dd/MM/yyyy'}
                                        }"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>


        <beginButton>
            <Button type="Emphasized" press="handleConfirmarReserva" text="Confirmar"/>
        </beginButton>
        <endButton>
            <Button press="closeDialog" text="Cancelar"/>
        </endButton>
    </Dialog>

</core:FragmentDefinition>