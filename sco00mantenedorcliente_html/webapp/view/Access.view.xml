<mvc:View xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
          xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:t="sap.ui.table" xmlns="sap.m"
          controllerName="sapui5agendar.sco00mantenedorcliente_html.controller.Access">
    <App class="sapUiSizeCompact" id="app">
        <Page showHeader="false">
            <subHeader>
                <Toolbar id="filters">
                    <Button icon="sap-icon://nav-back" text="Atr치s" press="handleBack"/>
                    <Label class="sapUiSmallMarginBegin" text="RUT Cliente:" required="true"/>
                    <Input  value="{
                                path:'/filters/Cliente',
                                type:'sapui5agendar.sco00mantenedorcliente_html.customelements.ExtendedString',
                                constraints:{type:'rut'}
                            }"
                            editable="false"
                            width="12rem"
                            submit="handleContinue"/>
                </Toolbar>
            </subHeader>
            <content>
                <f:Form editable="true">
                    <f:title>
                        <core:Title text="Sociedad"/>
                    </f:title>
                    <f:layout>
                        <f:ResponsiveGridLayout
                                labelSpanXL="4"
                                labelSpanL="4"
                                labelSpanM="12"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="4"
                                emptySpanL="4"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false"/>
                    </f:layout>
                    <f:formContainers>
                        <f:FormContainer>
                            <f:formElements>
                                <f:FormElement label="Sociedad">
                                    <f:fields>
                                        <Input  value="{/filters/Sociedad}"
                                                submit="handleContinue"/>
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                    </f:formContainers>
                </f:Form>
                <f:Form editable="true">
                    <f:title>
                        <core:Title text="Area de Ventas"/>
                    </f:title>
                    <f:layout>
                        <f:ResponsiveGridLayout
                                labelSpanXL="4"
                                labelSpanL="4"
                                labelSpanM="12"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="4"
                                emptySpanL="4"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false"/>
                    </f:layout>
                    <f:formContainers>
                        <f:FormContainer>
                            <f:formElements>
                                <f:FormElement label="Organizaci칩n de Ventas">
                                    <f:fields>
                                        <Select
                                                items="{/Opciones/OrganizacionesVenta}"
                                                selectedKey="{/filters/i_OrganizacionVenta}"
                                                forceSelection="false">
                                            <core:Item key="{VKORG}" text="{VKORG} - {VTEXT}"/>
                                        </Select>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Canal Distribuci칩n">
                                    <f:fields>
                                        <Select
                                                items="{/Opciones/CanalesDistribucion}"
                                                selectedKey="{/filters/i_CanalDistribucion}"
                                                forceSelection="false">
                                            <core:Item key="{VTWEG}" text="{VTWEG} - {VTEXT}"/>
                                        </Select>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Sector">
                                    <f:fields>
                                        <Select
                                                items="{/Opciones/Sectores}"
                                                selectedKey="{/filters/i_Sector}"
                                                forceSelection="false">
                                            <core:Item key="{SPART}" text="{SPART} - {VTEXT}"/>
                                        </Select>
                                    </f:fields>
                                </f:FormElement>

                                <f:FormElement label="">
                                </f:FormElement>

                                <f:FormElement label="">
                                    <f:fields>
                                        <Button text="Limpiar Selecci칩n" press="handleLimpiar"/>
                                        <Button text="Area de Ventas del Cliente" press="handleAreaCliente"/>
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                    </f:formContainers>
                </f:Form>
            </content>
            <footer>
                <Toolbar>
                    <Button
                            id="errorPopover"
                            icon="sap-icon://message-popup"
                            visible="{= ${message>/}.length > 0}"
                            text="{= ${message>/}.length}"
                            type="Emphasized"
                            press="handleMessagePopoverPress"/>
                    <ToolbarSpacer/>
                    <Button icon="sap-icon://navigation-right-arrow" text="Continuar" press="handleContinue"/>
                </Toolbar>
            </footer>
        </Page>
    </App>
</mvc:View>